    "packages:test": "lerna run test",
    "packages:build": "lerna run build"
  },
  "workspaces": [
    "api",
    "web",
    "mobile"
  ],
  "devDependencies": {
    "@commitlint/cli": "^8.3.3",
    "@commitlint/config-conventional": "^8.3.3",
    "commitizen": "^4.0.3",
    "eslint": "^6.8.0",
    "husky": "^3.1.0",
    "lerna": "^3.18.1"
  },
  "dependencies": {},
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
